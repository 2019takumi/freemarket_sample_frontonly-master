.devise.signup-address
  = render "devise/shared/header"
  .deviseSection
    .inner
      %h2.title お届け先住所入力
      .deviseForm
        .new_user
          = form_for :personal_information, url: personal_information_user_registration_path,method: :post do |f|

            .deviseForm__field.deviseForm__field--top
              = f.label :お名前
              %span.formRequired 必須
              %br/
              = f.text_field :last_name, autofocus: true, autocomplete: "off", placeholder: "例）山田", class: "inputField", required: true
              = f.text_field :first_name, autofocus: true, autocomplete: "off", placeholder: "例）彩", class: "inputField", required: true
            .deviseForm__field
              = f.label :お名前カナ
              %span.formRequired 必須
              %br/
              = f.text_field :last_name_k, autofocus: true, autocomplete: "off", placeholder: "例）ヤマダ", class: "inputField", required: true
              = f.text_field :first_name_k, autofocus: true, autocomplete: "off", placeholder: "例）アヤ", class: "inputField", required: true
            .deviseForm__field
              = f.label :郵便番号
              %span.formRequired 必須
              %br/
              = f.text_field :postal_code, autofocus: true, autocomplete: "off", placeholder: "例）123-4567", class: "inputField", required: true
            .deviseForm__field
              = f.label :都道府県
              %span.formRequired 必須
              %br/
              //= f.collection_select :prefecture_id, Prefecture.all, :id, :name
            .deviseForm__field
              = f.label :市区町村
              %span.formRequired 必須
              %br/
              = f.text_field :municipalities, autofocus: true, autocomplete: "off", placeholder: "例）横浜市緑区", class: "inputField", required: true
            .deviseForm__field
              = f.label :番地
              %span.formRequired 必須
              %br/
              = f.text_field :address, autofocus: true, autocomplete: "off", placeholder: "例）青山1-1-1", class: "inputField", required: true
            .deviseForm__field
              = f.label :建物名
              %span.formRequired 任意
              %br/
              = f.text_field :building, autofocus: true, autocomplete: "off", placeholder: "例）柳ビル103", class: "inputField", required: true
            .deviseForm__field
              = f.label :電話
              %span.formRequired 任意
              %br/
              = f.text_field :phone_number, autofocus: true, autocomplete: "off", placeholder: "例）09012345678", class: "inputField", required: true
            .deviseForm__actions
              = button_to credit_user_registration_path, class: "deviseBtn" do
                次へ進む
              = link_to credit_user_registration_path, class: "deviseBtn" do

                次へ進む
  =render "devise/shared/footer"